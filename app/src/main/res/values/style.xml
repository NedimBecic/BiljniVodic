<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleText">
        <item name="android:textColor"> @color/mainGreen </item>
        <item name="android:textSize"> 32sp </item>
        <item name="android:textFontWeight"> 800 </item>
    </style>

    <style name="listItemTitle">
        <item name="android:textColor"> @color/white </item>
        <item name="android:background"> @drawable/item_title_background </item>
        <item name="android:radius"> 16dp </item>
        <item name="android:padding"> 4dp </item>
    </style>

    <style name="addBiljkaHeader">
        <item name="android:textColor"> @color/white </item>
        <item name="android:background"> @drawable/item_title_background </item>
        <item name="android:radius"> 16dp </item>
        <item name="android:padding"> 8dp </item>
        <item name="android:textSize"> 20sp </item>
    </style>

    <style name="navbar">
        <item name="android:background"> @color/mainGreen </item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 16sp </item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/border_background </item>
        <item name="android:popupBackground"> @drawable/border_background </item>
    </style>

</resources>